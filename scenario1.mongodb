// Node.js module exports for autograding
module.exports = {
  part1: [
    { $match: { continent: "South America" } },
    { $sort: { name: 1 } }
  ],
  part2_task1: [
    {
      $group: {
        _id: "$continent",
        avgPopulation: { $avg: "$population" }
      }
    }
  ],
  part2_task2: [
    {
      $group: {
        _id: "$country",
        count: { $sum: 1 }
      }
    },
    { $match: { count: { $gte: 2 } } }
  ],
  part3: [
    { $match: { continent: "Asia" } },
    {
      $project: {
        _id: 0,
        city: "$name",
        pop: "$population"
      }
    }
  ],
  part4: [
    { $match: { population: { $gt: 15 } } },
    {
      $group: {
        _id: "$continent",
        total_mega_pop: { $sum: "$population" }
      }
    },
    { $sort: { total_mega_pop: -1 } },
    {
      $project: {
        _id: 0,
        region: "$_id",
        total_mega_pop: 1
      }
    }
  ]
};
